<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
<% end %>
<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
       <h2>User info</h2>
        <table class="table">
          <tbody>
            <tr>
             <%= image_tag @book.user.get_profile_image(100,100) %>
            </tr>
            <tr>
    	       <th>name</th>
    	       <th><%= @book.user.name %></th>
            </tr>
            <tr>
    	       <th>introduction</th>
    	       <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>
        </table>
  　
        <div class="row">
          <%= link_to edit_user_path(@book.user.id), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i> 
         <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: Book.new do |f| %>
          <div>Title</div>
          <%= f.text_field :title %>
        	
          <div>Opinion</div>
          <%= f.text_area :body %>
        	
          <%= f.submit 'Create Book', class: "btn btn-success" do %>
          <% end %>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
    		<h2>Book detail</h2>
    		<table class="table">
    		 <tbody>
    		  <tr>
    		   <td><%= image_tag @book.user.get_profile_image(100,100) %>
    		    <br><%=link_to @book.user.name, user_path(@book.user.id) %>
    		   </td>
    		   <td><%=link_to @book.title, book_path(@book.id) %></td>
    		   <td><%=@book.body %></td>
    		   <% if @book.user==current_user %>
    		   <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %>
    		   </td>
    		   <td><%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
    		   </td>
    		   <% end %>
    		  </tr>
    		 </tbody>  
        </table>
      </div>
    </div>
  </div>
</main>