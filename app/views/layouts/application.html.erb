<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
 <body>
  <header>
   <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
     <a class="navbar-brand" href>
       <span>Bookers</span>
     </a>
     <!--<button class="navbar-toggler coollasped" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">-->
     <!--<button class="navbar-toggler"            type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">--> 
     <!--  <span class="navber-toggler-icon"></span> -->
     <!--  <span class="navbar-toggler-icon"></span>-->
     <!--</button>-->
     <!--</button>-->
     <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
     </button>
     <div class="navbar-collaspe coollaspe" id="navbarNavDropdown" >
       <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
        <li>
          <%= link_to user_path(current_user),class:"nav-link text-light" do %> 
          Home
          <i class="fas fa-home"></i> 
          <% end %>
        </li> 
        <li>
         
          <%= link_to users_path,class:"nav-link text-light" do %>
          Users
          <i class="fas fa-users"></i> 
          <% end %>
        </li>
        
        <li>
          <%= link_to books_path,class:"nav-link text-light" do %>
          Books
          <i class="fas fa-book-open"></i>
          <% end %>
        </li>
        <li>
         <%= link_to  destroy_user_session_path, method: :delete,class:"nav-link text-light" do %>
         Log out
         <i class="fas fa-sign-out-alt"></i>
         <% end %>
        </li>
    
        <% else %>
         <li>
         <%= link_to root_path,class:"nav-link text-light" do %>
         Home
         <i class="fas fa-home"></i>  
         <% end %>
        </li> 
        <li>
         <a class="nav-link text-light" href="/home/about">
          <i class="fas fa-link"></i> 
          About
         </a>  
         <% link_to "about" ,about_path %>
        </li>
        <li>
         <a class="nav-link text-light" href="/users/sign_up">
          <i class="fas fa-user-plus"></i> 
          Sign up
         </a>       
        </li>
        <li>
         <a class="nav-link text-light" href="/users/sign_in">
          <i class="fas fa-sign-in-alt"></i> 
          Log in
         </a>
        </li> 
         <% end %>
       </ul>
     </div>
    </div>   
   </nav> 
    
    

    <%= yield %>
  <footer>
   <div class="container mt-5">
    <div class="row">
     <div class="mx-auto">
      <p>CopyRight Infratop.inc</p>
     </div> 
    </div>
   </div> 
  </footer>
 </body>  
</html>